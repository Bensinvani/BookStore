<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Library</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .book-card .available {
            color: green;
        }
        .book-card .not-available {
            color: red;
        }
        .book-cover {
            width: 100%;
            height: 300px; 
            object-fit: cover; 
        }
        .borrow-btn {
            transition: all 0.3s ease;
        }
        .borrow-btn:hover {
            transform: scale(1.05);
        }
        .jumbotron {
            background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('library-background.jpg') no-repeat center center;
            background-size: cover;
            color: white;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <!-- Hero Section -->
        <div class="jumbotron">
            <h1 class="display-4">Discover Your Next Adventure</h1>
            <p class="lead">Dive into our curated collections and find your next favorite book today.</p>
            <hr class="my-4">
            <p>Become a part of our ever-growing community of book lovers.</p>
            <a class="btn btn-success btn-lg" href="/books" role="button">Browse Collection</a>
        </div>

        <!-- Recommended Books Section -->
        <section class="recommended-books">
            <h2 class="mb-4">Recommended Books</h2>
            <div class="row">
                {{#each recommendedBooks}}
                    <div class="col-md-4 mb-4">
                        <div class="card book-card">
                            {{#if this.imageUrl}}
                            <img src="{{this.imageUrl}}" alt="Book Cover" class="book-cover">
                            {{else}}
                            <p>No image available</p>
                            {{/if}}
                            <div class="card-body">
                                <h5 class="card-title">{{this.name}}</h5>
                                <p class="card-text">Author: {{this.author}}</p>
                                <p class="card-text status">
                                    Status: 
                                    {{#if this.isExist}}
                                        <span class="available">Available ✅</span>
                                    {{else}}
                                        <span class="not-available">Borrowed ❌</span>
                                    {{/if}}
                                </p>
                                <button class="btn {{#if this.isExist}}btn-primary{{else}}btn-secondary disabled{{/if}} borrow-btn">Borrow</button>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </section>
    </div>


    <!-- Bootstrap JS, Popper.js, and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
